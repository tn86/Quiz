<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quiz.Spiel">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAntwortVier"
            android:layout_width="175dp"
            android:layout_height="104dp"
            android:layout_alignLeft="@+id/btnAntwortZwei"
            android:layout_alignStart="@+id/btnAntwortZwei"
            android:layout_below="@+id/btnAntwortEins"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnAntwortDrei"
            android:layout_width="175dp"
            android:layout_height="104dp"
            android:layout_alignBottom="@+id/btnAntwortVier"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp" />

        <Button
            android:id="@+id/btnAntwortEins"
            android:layout_width="175dp"
            android:layout_height="104dp"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="205dp" />

        <TextView
            android:id="@+id/tVAnzeigeFrage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tVScore"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/tVAnzeigeFrage"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tVAnzeigeFrage"
            android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp" />

        <Button
            android:id="@+id/btnAntwortZwei"
            android:layout_width="175dp"
            android:layout_height="104dp"
            android:layout_alignEnd="@+id/tVAnzeigeFrage"
            android:layout_alignRight="@+id/tVAnzeigeFrage"
            android:layout_alignTop="@+id/btnAntwortEins" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
